<p id="notice"><%= notice %></p>

<h2>Jobs Requested</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Owner</th>
      <th>Cost</th>
      <th>Size</th>
      <th>Urgency</th>
      <th>Pickup City/Suburb</th>
      <th>Dropoff City/Suburb</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.title %></td>
        <td><%= request.owner %></td>
        <td>$<%= request.cost %></td>
        <td><%= request.size %></td>
        <td><%= request.urgency %></td>
        <td><%= request.from_city %>, <%= request.from_state %></td>
        <td><%= request.to_city %>, <%= request.to_state %></td>
        <td><%= link_to 'Show', request %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Message User', new_message_path %></td>
          <% if current_user.can_edit?(request) %>
            <td><%= link_to 'Edit', edit_request_path(request) %></td>
          <% end %>
          <% if current_user.can_delete?(request) %>
            <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2>Jobs Offered</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Owner</th>
      <th>Email</th>
      <th>Description</th>
      <th>Price</th>
      <th>Integer</th>
      <th>Transport</th>
      <th>City</th>
      <th>State</th>
      <th>String</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>
