<!DOCTYPE html>
<html>
  <head>
    <title>Mover</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- Headings for all the main pages -->
    <h1>Mover</h1>
    <br>

    <%= link_to 'Home', moves_path %>
    <%= link_to 'About', abouts_path %>
    <%= link_to 'User Profiles', users_path %>
    <% if user_signed_in? %>
      <%= link_to 'Request Job', new_request_path %>
      <%= link_to 'New Provider', new_provider_path %>
      <%= link_to 'Your Conversations', conversations_path %>
      <%= link_to('Edit User Profile', edit_user_registration_path) %>
      <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
    <% else %>
      <%= link_to('Register', new_user_registration_path)  %>
      <%= link_to('Login', new_user_session_path)  %>
    <% end %>

    <% if user_signed_in? %>
      <p>Currently logged in as: <%= current_user.username %></p>
    <% else %>
      <p>Not signed in</p>
    <% end %>
    <br>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
